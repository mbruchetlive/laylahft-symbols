{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "AuthClients": {
    "ClientId": "my-client-id",
    "ClientSecret": "my-client-secret"
  },
  "Jwt:SigningKey": "this-is-a-very-strong-secret-key-at-least-32-bytes",
  "Timeframes": [ "M1", "H1", "D1" ],
  "MaxSymbols": 200,
  "BufferWindow": 50,
  "MarketDetection": {
    "TimeframeThresholds": {
      "M1": {
        "VolumeSpikeRatioThreshold": 1.1,
        "MinVolume": 200,
        "PriceJumpRatioThreshold": 1.002,
        "VolatilitySpikeRatioThreshold": 1.05
      },
      "H1": {
        "VolumeSpikeRatioThreshold": 1.3,
        "MinVolume": 2000,
        "PriceJumpRatioThreshold": 1.01,
        "VolatilitySpikeRatioThreshold": 1.1
      },
      "D1": {
        "VolumeSpikeRatioThreshold": 1.5,
        "MinVolume": 10000,
        "PriceJumpRatioThreshold": 1.03,
        "VolatilitySpikeRatioThreshold": 1.2
      }
    }
  },

  "AllowedHosts": "*"
}
